<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectMadManga.CreatePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Create Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="EntAfbeelding"></Entry>
            <Entry x:Name="EntCarName" Text="AutoNaamHier"></Entry>
            <Entry x:Name="EntCarAccel" Text="0"></Entry>
            <Entry x:Name="EntCarTopSpeed" Text="0"></Entry>
            <Entry x:Name="EntCarHandeling" Text="0"></Entry>
            <Entry x:Name="EntCarBraking" Text="0"></Entry>
            <Entry x:Name="EntCarWanted" Text="0"></Entry>
            <Button x:Name="BtnCreate" Text="Maak" Clicked="Create_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>